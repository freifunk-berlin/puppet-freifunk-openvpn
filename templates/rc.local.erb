#!/bin/sh -e
#
# rc.local
#
# This script is executed at the end of each multiuser runlevel.
# Make sure that the script will "exit 0" on success or any other
# value on error.
#
# In order to enable or disable this script just change the execution
# bits.
#
# By default this script does nothing.

# Setzt die Variablen INET_DEV und MESH_NET
. /etc/cron.daily/roulette

iptables -t nat -F PREROUTING
iptables -t nat -P PREROUTING ACCEPT

# Falls SNAT mal nicht greift: fuer private IPv4s gibts Fehlermeldung an Absender

iptables -t filter -F FORWARD
iptables -t filter -P FORWARD ACCEPT
for net in ${MESH_NET} 192.168.0.0/16;do
	iptables -t filter -A FORWARD -o ${INET_DEV} -d ${net} -j REJECT \
    --reject-with icmp-net-prohibited
done
iptables -t filter -A FORWARD -o ${INET_DEV} \
  -p tcp --tcp-flags SYN,RST SYN -j TCPMSS --clamp-mss-to-pmtu

ip rule add iif eth0 lookup reverseroutes
ip rule add iif lo lookup reverseroutes

# Increasing the size of nf_conntrack hash-table so we don't drop packets
# because of a full table.
echo 32768 > /sys/module/nf_conntrack/parameters/hashsize

# ensure sysctl settings are set on boot
# https://bugs.launchpad.net/ubuntu/+source/procps/+bug/50093

/etc/init.d/procps restart

exit 0
